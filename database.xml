<?xml version="1.0" encoding="UTF-8"?>
<database>

    <global>
        <table name="watcher" no-site-reference="1" no-auto-update="1">
            <field type="INT(11) NOT NULL">id</field>
            <field type="TEXT">message</field>
            <field type="VARCHAR(255)">localeGroup</field>
            <field type="VARCHAR(255)">localeVar</field>
            <field type="TEXT">localeParams</field>
            <field type="INT(11) NOT NULL">uid</field>
            <field type="DATETIME NOT NULL DEFAULT '0000-00-00 00:00:00'">statusTime</field>
            <field type="VARCHAR(255)">call</field>
            <field type="TEXT">callParams</field>

            <primary>id</primary>
            <auto_increment>id</auto_increment>
        </table>

        <table name="watcherEvents" no-site-reference="1" no-auto-update="1">
            <field type="INT(11) NOT NULL">id</field>
            <field type="VARCHAR(255)">package</field>
            <field type="VARCHAR(255)">ajax</field>
            <field type="VARCHAR(255)">event</field>
            <field type="TEXT">exec</field>

            <primary>id</primary>
            <auto_increment>id</auto_increment>
        </table>
    </global>

</database>
